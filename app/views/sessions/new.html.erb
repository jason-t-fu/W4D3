
<h1>Log In</h1>
<form action="<%= session_url %>" method="post">
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">

    <% if flash[:errors] %>
    <% flash[:errors].each do |error| %>
      <%= error %>
    <% end %>
    <% end %>

  <br>
  <br>
  <label>Username: 
    <input type="text" 
           name="user[username]"
           >
  </label>
  <br><br>
  <label>Password:
    <input type="text" 
           name="user[password]"
           >

  </label>
  <br><br>

  <input type="submit" value="Login">
</form>